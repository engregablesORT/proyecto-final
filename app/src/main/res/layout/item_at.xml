<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_package_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#404040"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text_item_at_apellido"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#D5D5D5">


        <ImageView
            android:id="@+id/img_item_hor"
            android:layout_width="66dp"
            android:layout_height="62dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/user_at" />

        <TextView
            android:id="@+id/text_item_at_nombre"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="TextView"
            android:textColor="#0E0E0E"
            app:layout_constraintStart_toEndOf="@+id/img_item_hor"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_item_at_2"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="15dp"
            android:text="TextView2"
            android:textColor="#0E0E0E"
            app:layout_constraintStart_toEndOf="@+id/text_item_at_nombre"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_item_at_3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/img_item_hor"
            app:layout_constraintTop_toBottomOf="@+id/text_item_at_nombre" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>