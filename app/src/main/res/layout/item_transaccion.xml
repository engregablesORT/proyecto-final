<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_package_item"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:cardBackgroundColor="#D5D5D6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_transaccion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D5D5D5">


        <TextView
            android:id="@+id/textItemNombreEmpresa"
            android:layout_width="92dp"
            android:layout_height="20dp"
            android:layout_marginStart="28dp"
            android:text="NombreEmpresa"
            android:textColor="#0E0E0E"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.466" />

        <TextView
            android:id="@+id/textItemFecha"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginStart="144dp"
            android:text="Fecha"
            android:textColor="#0E0E0E"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textItemMonto"
            android:layout_width="59dp"
            android:layout_height="22dp"
            android:layout_marginStart="272dp"
            android:text="Monto"
            android:textColor="#0E0E0E"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>