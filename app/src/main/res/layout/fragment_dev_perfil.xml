<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.dev.FragmentDev_perfil">

    <Button
        android:id="@+id/btnGuardarDevPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_rounded"
        android:text="Guardar"
        android:visibility="visible"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordDevEditText" />

    <Button
        android:id="@+id/editarTecnologiasDev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_rounded"
        android:text="Editar Tecnologias"
        android:visibility="visible"
        app:backgroundTint="#2196F3"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardarDevPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordDevEditText" />

    <ImageView
        android:id="@+id/btnEditarDev2"
        android:layout_width="23dp"
        android:layout_height="22dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtEncabezado2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEncabezado2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <ImageView
        android:id="@+id/imgDevPerfil"
        android:layout_width="129dp"
        android:layout_height="127dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/at_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nombreDev"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:paddingLeft="20px"
        android:layout_marginStart="50dp"
        android:layout_marginTop="35dp"
        android:background="#F6F5F5"
        android:editable="true"
        android:hint="Nombre"
        android:textColor="#000000"
        android:textColorHint="#717171"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgDevPerfil"
        app:layout_constraintTop_toBottomOf="@+id/txtEncabezado2" />

    <EditText
        android:id="@+id/precioPorHoraEditText"
        android:layout_width="127dp"
        android:layout_height="54dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/input_rounded"
        android:backgroundTint="#D2F4D1"
        android:hint="Nombre"
        android:paddingLeft="70px"
        android:text="TextView"
        android:textColor="#4CAF50"
        android:textColorHint="#4CAF50"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tecnologiasDevText4" />

    <EditText
        android:id="@+id/emailDevEditText"
        android:layout_width="255dp"
        android:layout_height="46dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/input_rounded"
        android:backgroundTint="#F6F5F5"
        android:paddingLeft="20px"
        android:textColor="#050505"
        android:textColorHint="#4CAF50"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toEndOf="@+id/emailDevText"
        app:layout_constraintTop_toBottomOf="@+id/precioPorHoraEditText" />

    <EditText
        android:id="@+id/passwordDevEditText"
        android:layout_width="256dp"
        android:layout_height="52dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/input_rounded"
        android:backgroundTint="#F6F5F5"
        android:paddingLeft="20px"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/passwordDevText"
        app:layout_constraintTop_toBottomOf="@+id/emailDevEditText" />

    <EditText
        android:id="@+id/tituloDev"
        android:layout_width="98dp"
        android:layout_height="45dp"
        android:paddingLeft="30px"
        android:layout_marginStart="50dp"
        android:layout_marginTop="2dp"
        android:background="#F6F5F5"
        android:textColor="#686868"
        android:textColorHint="#5A5A5A"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/imgDevPerfil"
        app:layout_constraintTop_toBottomOf="@+id/nombreDev" />

    <EditText
        android:id="@+id/descripcionDev"
        android:layout_width="372dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/input_rounded"
        android:backgroundTint="#F6F5F5"
        android:hint="Descripcion"
        android:paddingLeft="20px"
        android:textColor="#5A5A5A"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDevPerfil" />

    <EditText
        android:id="@+id/apellidoDev"
        android:layout_width="71dp"
        android:layout_height="35dp"
        android:paddingLeft="20px"
        android:layout_marginTop="35dp"
        android:background="#F6F5F5"
        android:hint="Apellido"
        android:textColor="#000000"
        android:textColorHint="#717171"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/nombreDev"
        app:layout_constraintTop_toBottomOf="@+id/txtEncabezado2" />

    <TextView
        android:id="@+id/tecnologiasDevText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Seniority"
        android:textColor="#131313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionDev" />

    <TextView
        android:id="@+id/emailDevText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:text="Email: "
        android:textColor="#131313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSeniority" />

    <TextView
        android:id="@+id/passwordDevText"
        android:layout_width="68dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="Password: "
        android:textColor="#131313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailDevText" />

    <TextView
        android:id="@+id/tecnologiasDevText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Precio / Hora"
        android:textColor="#131313"
        app:layout_constraintStart_toEndOf="@+id/anioExpText"
        app:layout_constraintTop_toBottomOf="@+id/descripcionDev" />

    <TextView
        android:id="@+id/anioExpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="|"
        android:textColor="#131313"
        app:layout_constraintStart_toEndOf="@+id/tecnologiasDevText2"
        app:layout_constraintTop_toBottomOf="@+id/descripcionDev" />

    <Spinner
        android:id="@+id/spinnerSeniority"
        android:layout_width="146dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/bg_center"
        android:foregroundTint="#FFFFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tecnologiasDevText2" />

</androidx.constraintlayout.widget.ConstraintLayout>